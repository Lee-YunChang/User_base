             , A.POSTCODE
             , SUBSTR (POSTCODE, 0, 3) AS POSTCODE1
             , SUBSTR (POSTCODE, 4, 7) AS POSTCODE2
             , A.ADDR1
             , A.ADDR2
             , A.USERID
             , A.PWD
             , A.LETTERYN
             , A.SMSYN
             , A.CANCEL_YN
             , A.MT_GRADE_CODE
             , A.MT_TUTOR_CODE
             , A.TUTOR_LEC_PRC
             , A.TUTOR_ETC_PRC
             , A.TUTOR_OJT_PRC
          FROM VW_TB_CT_USER A
